package day03_basic.ex02.operator;

public class OperatorTest {
	public static void main(String[] args) {
		
		// 단항 연산
		
		int x = 10, y;
		
//		y = x++; // 대입먼저(후입연산), 증감 나중
//		y = ++x; // 후입
//		y = --x;
		y = x--;
		System.out.println(x + "," +y);
		
		int a = 10, result;
		result = ~a;
		
		System.out.println(a + ", 비트부정: " + result); // 원래값 ,-(원래값+1)
		
	}

}

