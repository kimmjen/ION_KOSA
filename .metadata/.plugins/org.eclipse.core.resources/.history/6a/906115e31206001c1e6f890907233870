		switch (score / 10) {
		case 100:	
		case 90:	grade = 'A'; break;
		case 80:	grade = 'B'; break;
		case 70:	grade = 'C'; break;
		case 60:	grade = 'D'; break;
		

		default:
			grade = 'F';
			break;
		}
		} // switch end
		System.out.println("\n\n 점수는 : " + score + " 점" + " 학점은 : " + grade);
	}

